<body>
  <div class="wrap" id="box">
    <img class="thumb" id="thumb" src="imagens/thumbnail.jpg" alt="Capa do vÃ­deo" loading="lazy">
    <iframe id="yt" src="" title="Video"
      allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen loading="lazy"></iframe>
  </div>

<script>
  const thumb = document.getElementById('thumb');
  const yt = document.getElementById('yt');
  const videoId = '_KjZRDHKIdo'; // <- troque pelo seu ID se precisar
  function loadVideo(){
    // autoplay=1 autoinicia depois do clique; mute=1 evita bloqueio em alguns navegadores (opcional)
    yt.src = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1&rel=0&modestbranding=1&controls=1';
    yt.style.display = 'block';
    thumb.style.display = 'none';
  }
  thumb.addEventListener('click', loadVideo);
</script>
</body>
